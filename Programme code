```package com.MianMing;

import java.sql.SQLOutput;
import java.util.Scanner;

public class MineralWater
{
    public static void main(String[] args)
    {
        Scanner userinput = new Scanner(System.in); //scanner for capture userinput
        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
        System.out.println("[2] to calculate the price for bottles"); //question 2
        System.out.println("[0] to exit the calculation"); //closure
        System.out.println();
        System.out.println("please choose a number from above ");

        while (userinput.hasNext()) //if the scanner capture something, run the while loop (keep running)
        {
            if (userinput.hasNextInt())  //if the scanner capture integer will return true
            {
                int option = userinput.nextInt();//after scanner caught the int will save in this option variables
                switch(option)
                {
                    case 1:
                        question_1();//link to my Question_1 class and use the question_1 method
                        break;//exit the switch case
                    case 2:
                        question_2();//link to my Question_2 class and use the question_2 method
                        break;
                    case 0:
                        System.exit(0);//to end the entire program
                        break;
                    default:
                        System.out.println("please only enter [0] or [1] or [2]");
                        break;

                }

            }
            else
            {
                System.out.println("please only enter [0] or [1] or [2]");
                userinput.next();//skip the previous userinput
            }


        }
    }

    public static void question_1()
    {
        Scanner myobj = new Scanner(System.in);
        // create myobj as a scanner
        //'System.in' is to let the scanner read the user input

        System.out.println("please enter your amount");

        int bottle;
        double remainder;
        int set;
        double cost;
        double totalCost;

        if (myobj.hasNextDouble())
        {
            double amount = myobj.nextDouble();
            // datatype = integer(double datatype), variable name = amount
            // nextdouble = read the double datatype

            if(!(amount <= 0)) {
                System.out.println("Money (RM):" + String.format("%.2f",amount));
                System.out.println("--------------------------------------");

                if (amount >= 12) {
                    //if amount=24

                    set = (int) amount / 12;
                    // set = 2

                    bottle = set * 24;
                    //2*24=48bottle

                    remainder = amount % 12;
                    //the '%' is to find the remainder

                    cost = set * 12;
                    // needed
                    totalCost = cost;
                    //double totalCost= a new container for cost since the cost will be overwrite

                    System.out.println(set + " set (" + bottle + " bottles) x 12-> RM" + String.format("%.2f",cost));
                    //first result

                    if (remainder >= 8 && remainder < 12)//remainder = 8~11
                    {
                        double remainder1;
                        //define variables
                        set = (int) remainder / 8;
                        //to know how many set we can buy from here
                        bottle = set*10;
                        //bottle = set * 10 = total bottle of the RM8 set (overwrite)
                        cost = set*8;
                        // to know how many set are cost.
                        totalCost += cost;
                        //totalCost= previous cost + latest cost
                        System.out.println(set + " set (" + bottle + " bottles) x 8-> RM" + String.format("%.2f",cost));



                        remainder1 = remainder % 8;
                        // remainder1 = the remainder after divive the RM8

                        if (remainder1 < 8) // remainder1 = 0~7
                        {
                            System.out.println((int) remainder1 + " bottles x RM1.00 -> RM" + String.format("%.2f",remainder1));
                            totalCost += remainder1;
                            //totalCost + remainder = remainder1

                            System.out.println("Total: RM" + String.format("%.2f",totalCost));
                            // above are the situation when (remainder >= 8 && remainder < 12)
                            totalCost -= amount;
                            //total cost- amount = balance
                            System.out.println("Balance: RM" + String.format("%.2f",totalCost));
                            System.out.println("--------------------------------------");


                            //the code below are back to the menu section
                            System.out.println();

                            System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                            System.out.println("[2] to calculate the price for bottles"); //question 2
                            System.out.println("[0] to exit the calculation"); //closure
                            System.out.println();
                            System.out.println("please choose a number from above ");


                        }
                    } else if (remainder < 8 && remainder != 0)
                    {
                        //below are the result
                        System.out.println((int) remainder + " bottles x RM1.00 -> RM" + String.format("%.2f",remainder));
                        //above the (int) is because bottles are not Price, should not be using double.
                        System.out.println("Total: RM" + String.format("%.2f",amount));
                        cost += remainder; //set + remainder
                        amount -= cost;//amount - total cost
                        System.out.println("Balance: RM" + String.format("%.2f",amount));
                        System.out.println("--------------------------------------");
                        System.out.println();

                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");



                    }
                    else if(remainder ==0)
                    {
                        System.out.println("Total: RM" + String.format("%.2f",totalCost));
                        amount -= totalCost;
                        System.out.println("Balance:RM" + String.format("%.2f",amount));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }
                }
                else if (amount >= 8 && amount < 12)//remainder = 8~11
                {
                    set = (int) amount / 8;
                    bottle = set * 10;
                    remainder = amount % 8;
                    cost = set*8; //temporarily container (dont want too many , messy)
                    totalCost = cost;

                    System.out.println(set + " set (" + bottle + " bottles) x 8 -> RM" + String.format("%.2f",cost));

                    if (remainder < 8 )
                    {
                        System.out.println((int) remainder + " bottles x RM1.00 -> RM" + String.format("%.2f",remainder));

                        cost = remainder;
                        //cost = overwrite cost
                        totalCost += cost;

                        System.out.println("Total: RM" + String.format("%.2f", totalCost));

                        amount -= totalCost;
                        //amount - cost = amount
                        System.out.println("Balance: RM" + String.format("%.2f",amount));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");

                    }
                    else if (remainder == 0)
                    {
                        System.out.println("Total: RM" + String.format("%.2f",totalCost));
                        amount -= totalCost;
                        System.out.println("Balance:RM" + String.format("%.2f",amount));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }
                } else//(amount < 8)
                {
                    System.out.println((int) amount +" bottles x RM1.00 ->RM" + String.format("%.2f",amount));
                    System.out.println("Total: RM" +String.format("%.2f",amount));
                    amount -= amount;
                    System.out.println("Balance: RM" + String.format("%.2f",amount));
                    //Since RM1 = 1 bottle, then don't have to create a new algorithm.
                    System.out.println("--------------------------------------");


                    System.out.println();
                    System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                    System.out.println("[2] to calculate the price for bottles"); //question 2
                    System.out.println("[0] to exit the calculation"); //closure
                    System.out.println();
                    System.out.println("please choose a number from above ");


                }
            }
            else
            {
                System.out.println("[system error] negative or 0 cannot be calculate");
                System.out.println("--------------------------------------");
                System.out.println();
                System.out.println("now you are back to menu");
                System.out.println();
                System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                System.out.println("[2] to calculate the price for bottles"); //question 2
                System.out.println("[0] to exit the calculation"); //closure
                System.out.println();
                System.out.println("please choose a number from above ");
            }
        }

        else
        {
            System.out.println("Please only enter number!");
        }

    }

    public static void question_2() {
        Scanner second = new Scanner(System.in);
        System.out.println("please enter number of bottle");

        int remainder;
        int set;
        double cost;
        int totalBottle;
        double totalCost;

        if (second.hasNextDouble()) {
            int bottle = second.nextInt();

            System.out.println("Quantity (bottles): " + bottle);
            System.out.println("--------------------------------------");
            if (!(bottle <= 0)) {

                if (bottle >= 24) {
                    set = (int) bottle / 24;

                    remainder = bottle % 24;

                    cost = set * 12;

                    totalBottle = set * 24;

                    totalCost = cost;

                    System.out.println(set + " set(" + totalBottle + " bottles) -> RM" + String.format("%.2f",cost));
                    if (remainder >= 10 && remainder < 24)
                    {
                        int remainder1;

                        set = remainder / 10;

                        remainder1 = remainder % 10;

                        cost = set * 8;

                        totalBottle = set * 10;

                        totalCost += cost;

                        System.out.println(totalBottle + " bottles -> RM" + String.format("%.2f",cost));

                        if (remainder1 < 10) {
                            cost = remainder1 * 1;
                            System.out.println(remainder1 + " bottles -> RM" + String.format("%.2f",cost));
                            //since remainder1 is RM1.00, so dont have to change

                            totalCost += cost;
                            System.out.println("Total: RM" + String.format("%.2f",totalCost));
                            System.out.println("--------------------------------------");

                            System.out.println();
                            System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                            System.out.println("[2] to calculate the price for bottles"); //question 2
                            System.out.println("[0] to exit the calculation"); //closure
                            System.out.println();
                            System.out.println("please choose a number from above ");
                        }
                    }
                    else if (remainder < 10 && remainder != 0)
                    {
                        cost = remainder * 1;
                        System.out.println(remainder + " bottles -> RM" + String.format("%.2f",cost));
                        //since remainder1 is RM1.00, so dont have to change

                        totalCost += cost;
                        System.out.println("Total: RM" + String.format("%.2f",totalCost));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }

                    else if (remainder == 0) {
                        System.out.println("Total: RM" + String.format("%.2f", remainder));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }


                } else if (bottle >= 10 && bottle < 24) {
                    set = (int) bottle / 10;

                    remainder = bottle % 10;

                    cost = set * 8;

                    totalBottle = set * 10;

                    totalCost = cost;

                    System.out.println(set + " set(" + totalBottle + " bottles) -> RM" + String.format("%.2f",cost));

                    if (remainder < 10 && remainder != 0)
                    {
                        cost = remainder * 1;
                        System.out.println(remainder + " bottles -> RM" + String.format("%.2f",cost));
                        //since remainder1 is RM1.00, so dont have to change

                        totalCost += cost;
                        System.out.println("Total: RM" + String.format("%.2f",totalCost));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }
                    else if (remainder == 0)
                    {
                        System.out.println("Total: RM" + String.format("%.2f",cost));
                        System.out.println("Total: RM" + String.format("%.2f",cost));
                        System.out.println("--------------------------------------");

                        System.out.println();
                        System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                        System.out.println("[2] to calculate the price for bottles"); //question 2
                        System.out.println("[0] to exit the calculation"); //closure
                        System.out.println();
                        System.out.println("please choose a number from above ");
                    }

                }
                else
                {
                    set = bottle / 1;

                    cost = set * 1;

                    System.out.println(set + " set (" + bottle + " bottles) -> RM" + String.format("%.2f",cost));
                    System.out.println("Total: RM" + cost);
                    System.out.println("--------------------------------------");

                    System.out.println();
                    System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                    System.out.println("[2] to calculate the price for bottles"); //question 2
                    System.out.println("[0] to exit the calculation"); //closure
                    System.out.println();
                    System.out.println("please choose a number from above ");

                }


            }
            else
            {
                System.out.println("[system error] negative or 0 cannot be calculate");
                System.out.println();
                System.out.println("now you are back to menu");
                System.out.println();
                System.out.println("[1] to calculate how many bottles can be bought"); //question 1
                System.out.println("[2] to calculate the price for bottles"); //question 2
                System.out.println("[0] to exit the calculation"); //closure
                System.out.println();
                System.out.println("please choose a number from above ");
            }
        }
        else
        {
            System.out.println("Please only enter number!");
        }
    }
}```
